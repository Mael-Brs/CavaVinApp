<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mbras.cavavin" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dans Ma Cave</name>
    <description>
        Une application pour gérer votre cave à vin :
        - Ajoutez des vins, explorez le contenu de votre cave, choisissez le vin que vous allez déguster. 
        - Définissez les temps de garde d'un vin et l'application vous indiquera quand il arrive à maturité.
    </description>
    <author email="mael.b_53@hotmail.fr">
        Leam Srb
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon density="mdpi" height="57" src="res/android/current/icon.png" width="57" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~7.0.0" />
</widget>
