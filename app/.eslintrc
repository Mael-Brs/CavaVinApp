{
    "extends": "../.eslintrc",
    "env": {
        "node": false,
        "browser": true,
        "es6": true
    },
    "globals": {
        "angular": true,
        "ionic": true,
        "localforage": true
    },
    "rules": {
      "space-before-function-paren": [2, "never"],
      "prefer-const": ["error"],
      "no-var": ["error"]
    }
}