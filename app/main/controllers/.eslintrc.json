{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended",
      "../../.eslintrc"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error"
        ]
    }
}